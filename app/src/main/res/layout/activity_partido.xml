<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <ImageView
            android:id="@+id/ivPartidoAtras"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:contentDescription="Volver AtrÃ¡s" />
        <TextView
            android:id="@+id/tvPartidoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorBlanco"
            />
        <ImageView
            android:id="@+id/ivPartidoBuscar"
            android:src="@drawable/ic_search_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:contentDescription="buscar" />
        <ImageView
            android:id="@+id/ivPartidoCompartir"
            android:src="@drawable/ic_share_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:contentDescription="buscar" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivPartidoEscudoLocal"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="RIVER"
            android:layout_marginTop="10dp"
            android:textColor="@color/fuente"
            android:gravity="center"
            android:textSize="16dp"
            android:id="@+id/tvPartidoNombreLocal" />
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="2    1"
            android:layout_marginTop="10dp"
            android:textColor="@color/fuente"
            android:textSize="16dp"
            android:id="@+id/tvPartidoResultado" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="BOCA"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/fuente"
            android:textSize="16dp"
            android:id="@+id/tvPartidoNombreVisitante" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivPartidoEscudoVisitante"
             />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPartidoEquipoLocalGol1"
                android:text="11' Sebastian Driussi"
                android:paddingStart="10dp"
                android:textColor="@color/fuente"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvPartidoEquipoLocalGol3"
                android:text="88' Axel Werner (P)"
                android:gravity="end"
                android:textColor="@color/fuente"
                android:textSize="14dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPartidoEquipoLocalGol2"
            android:text="90'+5 Rodrigo Mora"
            android:paddingStart="10dp"
            android:textColor="@color/fuente"
            android:textSize="14dp"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/tituloTabsPartido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#33b5e5"
            android:textColor="#fff"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

    </android.support.v4.view.ViewPager>

</LinearLayout>