<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Día: "
            android:id="@+id/textViewDia"
            android:textColor="@color/fuente"
            android:textSize="12dp"
            android:layout_weight="0.95"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageViewEscudoLocal"
            android:gravity="center"
/>

        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNombreLocal"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/fuente"
            android:gravity="end"
            android:text="GIMNASIA DE LA PLATA"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewResultado"
            android:textColor="@color/fuente"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="10:20"
            android:textSize="15dp" />

        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNombreVisita"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/fuente"
            android:text="GIMNASIA DE LA PLATA"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageViewEscudoVisita"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:text="Árbitro: Javier Castrilli"
            android:id="@+id/textViewArbitro"
            android:layout_marginLeft="30dp"
            android:textColor="@color/fuente"
            android:textSize="12dp"
            android:layout_weight="0.42"
            android:textAlignment="textStart"
            android:layout_width="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estadio: Cabaña Leiva"
            android:id="@+id/textViewLugar"
            android:layout_marginLeft="2dp"
            android:textColor="@color/fuente"
            android:textSize="12dp"
            android:layout_weight="0.28"
            android:textAlignment="textEnd" />
    </LinearLayout>
</LinearLayout>