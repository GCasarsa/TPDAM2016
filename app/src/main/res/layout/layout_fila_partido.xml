<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Día: "
            android:id="@+id/textViewDia"
            android:gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: "
            android:id="@+id/textViewFecha"
            android:textColor="@color/colorPrimary"
            android:gravity="left|center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageViewEscudoLocal"
            android:gravity="center"
/>

        <TextView
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:text="Pucara"
            android:id="@+id/textViewNombreLocal"
            android:textColor="@color/colorPrimary"
            android:gravity="center"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="0 - 3"
            android:id="@+id/textViewResultado"
            android:textColor="@color/colorPrimary"
            android:gravity="center"/>

        <TextView
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:text="La Salle"
            android:id="@+id/textViewNombreVisita"
            android:textColor="@color/colorPrimary"
            android:gravity="center" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageViewEscudoVisita"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Árbitro: Javier Castrilli"
            android:id="@+id/textViewArbitro"
            android:gravity="center"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Cabaña Leiva"
            android:id="@+id/textViewLugar"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>