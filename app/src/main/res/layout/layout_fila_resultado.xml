<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEquiposResultadoFecha"
        android:paddingStart="10dp"
        android:textColor="@color/fuente"
        android:text="23.01"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEquiposResultadoNombreLocal"
        android:paddingStart="30sp"
        android:textColor="@color/fuente"
        android:text="Racing Club"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEquiposResultadoGolesLocal"
        android:paddingStart="20sp"
        android:textColor="@color/fuente"
        android:textStyle="bold"
        android:text="1:"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEquiposResultadoGolesVisitante"
        android:textColor="@color/fuente"
        android:textStyle="bold"
        android:text="2"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEquiposResultadoNombreVisitante"
        android:paddingStart="20sp"
        android:textColor="@color/fuente"
        android:text="Independiente"
        android:textSize="12sp"/>
</LinearLayout>
