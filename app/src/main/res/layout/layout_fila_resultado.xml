<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvEquiposResultadoFecha"
        android:paddingStart="7dp"
        android:textColor="@color/fuente"
        android:text="23.01"
        android:textSize="11dp"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvEquiposResultadoNombreLocal"
        android:paddingStart="2dp"
        android:textColor="@color/fuente"
        android:text="GIMNASIA DE LA PLATA"
        android:textSize="11dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEquiposResultadoGolesLocal"
        android:paddingStart="2dp"
        android:textColor="@color/fuente"
        android:textStyle="bold"
        android:text="10:"
        android:textSize="11dp"/>
    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvEquiposResultadoGolesVisitante"
        android:textColor="@color/fuente"
        android:textStyle="bold"
        android:text="20"
        android:textSize="11dp"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvEquiposResultadoNombreVisitante"
        android:paddingStart="10dp"
        android:textColor="@color/fuente"
        android:text="GIMNASIA DE LA PLATA"
        android:textSize="11dp"/>
</LinearLayout>
